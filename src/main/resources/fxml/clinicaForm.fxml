<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.ClinicaFormController"
            prefWidth="600" prefHeight="400"
            stylesheets="@/fxml/clinicaStyle.css">

    <children>
        <VBox spacing="10" alignment="CENTER" prefWidth="600" prefHeight="400"
              styleClass="form-container">
            <Label text="Registro de Clínica" styleClass="title-label"/>

            <GridPane hgap="10" vgap="10" alignment="CENTER">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="150"/>
                    <ColumnConstraints halignment="LEFT" minWidth="250"/>
                </columnConstraints>

                <children>
                    <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtNombre" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Dirección:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtDireccion" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Teléfono:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtTelefono" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Correo:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtCorreo" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                </children>
            </GridPane>

            <Button text="Registrar Clínica" onAction="#registrarClinica" styleClass="btn-registrar"/>
            <Label fx:id="lblEstado" text="" styleClass="status-label"/>
        </VBox>
    </children>
</AnchorPane>
